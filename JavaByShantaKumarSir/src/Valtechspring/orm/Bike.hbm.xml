<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
    <hibernate-mapping package = "Valtechspring.orm">
    
    <class name = "Bike">
    <id name = "id">
    <generator class="assigned"></generator><!-- assigned means user will provide will primary key -->
    <!-- <generator class = "increment"/> --> <!-- hibernate will select maxid + 1 -->
    <!-- <generator class = "sequence"/> -->
    </id>
    <property name = "make"/>
    <property name = "model"/>
    <property name = "yearManufactured"/>
    <property name = "color"/>
    </class>
    </hibernate-mapping>